<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="400" minWidth="800" spacing="10.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.DataViewController">

    <!-- Search Bar and ID Input -->
    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#deleteButtonClicked" style="-fx-background-color: red; -fx-text-fill: white" fx:id="deleteButton" mnemonicParsing="false" text="Delete"/>
        <TextField fx:id="searchTextField" prefHeight="26.0" prefWidth="411.0" promptText="Search by Name" />
        <TextField fx:id="idTextField" prefHeight="26.0" prefWidth="81.0" promptText="ID" />
        <Button onAction="#searchButtonClicked" text="Search" />
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <padding>
            <Insets top="10.0" />
        </padding>
    </HBox>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
    </TableView>

</VBox>
